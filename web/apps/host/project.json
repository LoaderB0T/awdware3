{
  "name": "host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/host/src",
  "prefix": "awd",
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/host",
        "index": "apps/host/src/index.html",
        "main": "apps/host/src/main.ts",
        "polyfills": "apps/host/src/polyfills.ts",
        "tsConfig": "apps/host/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/host/src/favicon.ico",
          "apps/host/src/assets",
          "apps/host/src/environment.json",
          "apps/host/src/modules.json"
        ],
        "styles": ["apps/host/src/styles.scss"],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/styles/src/lib"]
        },
        "customWebpackConfig": {
          "path": "apps/host/webpack.config.js"
        },
        "commonChunk": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/host/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:webpack-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "host:build:production"
        },
        "development": {
          "browserTarget": "host:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/host/src/**/*.ts", "apps/host/src/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/host"],
      "options": {
        "jestConfig": "apps/host/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "construct": {
      "executor": "nx-dynamic-mf:construct",
      "options": {
        "modulesFolder": "src/modules"
      }
    },
    "hash": {
      "executor": "nx-dynamic-mf:hash",
      "options": {
        "modulesFolder": "modules"
      }
    }
  },
  "tags": []
}
